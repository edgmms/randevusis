@model Hyper.Web.Models.ApplicationUsers.RegisterModel

@{
    ViewData["Title"] = "Kayıt ol";
}

<div class="content d-flex justify-content-center align-items-center">
    <form asp-route="Register" class="flex-fill">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                <img src="~/admin/assets/images/logo_icon.svg" class="h-48px" alt="">
                            </div>
                            <h5 class="mb-0">Yeni hesap oluştur</h5>
                        </div>

                        <div class="row">
                            <div class="text-center text-muted content-divider mb-2">
                                <span class="px-2">Hesap Giriş Bilgileriniz</span>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="UsernameOrEmail" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-at text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="UsernameOrEmail"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-lock text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="text-center text-muted content-divider mb-2">
                                <span class="px-2">Kişisel Bilgileriniz</span>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="FirstName" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-user-circle-plus text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="LastName" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-user-circle-plus text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="TurkishIdentityNumber" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="TurkishIdentityNumber" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-user-circle-plus text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="TurkishIdentityNumber"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="Phone" class="form-control phone" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-phone text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Phone"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="text-center text-muted content-divider mb-2">
                                <span class="px-2">İşletme Bilgileriniz </span>
                            </div>
                            <div class="text-center text-muted content-divider mb-2">
                                <span class="px-2 text-white text-bg-danger rounded"> İşletmeniz yoksa bu alanı atlayabilirsiniz</span>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label asp-for="StoreName" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="StoreName" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StoreName"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="StoreTaxNumber" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="StoreTaxNumber" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StoreTaxNumber"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="StoreTaxAdministration" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="StoreTaxAdministration" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StoreTaxAdministration"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="StoreEmail" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="StoreEmail" class="form-control" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StoreEmail"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="StorePhone" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <input asp-for="StorePhone" class="form-control store-phone" placeholder="">
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StorePhone"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label asp-for="StoreAddress" class="form-label"></label>
                                    <div class="form-control-feedback form-control-feedback-start">
                                        <textarea asp-for="StoreAddress" class="form-control" placeholder=""></textarea>
                                        <div class="form-control-feedback-icon">
                                            <i class="ph-buildings text-muted"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="StoreAddress"></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label class="form-check mb-2">
                                <input asp-for="TermOfServices" type="checkbox" class="form-check-input" checked>
                                <span class="form-check-label"> <a href="#">Kullanım koşullarını</a>&nbsp; kabul ediyorum.</span>
                            </label>
                            <span asp-validation-for="TermOfServices"></span>
                        </div>
                    </div>
                    <div class="card-body text-end border-top">
                        <a asp-route="Login" class="text-primary mx-3">
                            <i class="me-2"></i>
                            Mevcut bir hesabım var
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="ph-plus me-2"></i>
                            Hesap Oluştur
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
