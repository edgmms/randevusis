@model ProfileModel

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h2 class="mb-0"> Profilim -  @Model.FullName</h2>
            </div>
            <div class="card-body">
                <form asp-action="Profile" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <div class="row mb-3">
                                    <label asp-for="FirstName" class="col-lg-3 col-form-label"></label>
                                    <div class="col-lg-9">
                                        <input type="text" class="form-control" asp-for="FirstName" />
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="LastName" class="col-lg-3 col-form-label"></label>
                                    <div class="col-lg-9">
                                        <input type="text" class="form-control" asp-for="LastName" />
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Email" class="col-lg-3 col-form-label"></label>
                                    <div class="col-lg-9">
                                        <input type="email" class="form-control" asp-for="Email" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="DateOfBirth" class="col-lg-3 col-form-label"></label>
                                    <div class="col-lg-9">
                                        <input class="form-control datepicker-basic" asp-for="DateOfBirth" />
                                        <span asp-validation-for="DateOfBirth"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Gender" class="col-lg-3 col-form-label"></label>
                                    <div class="col-lg-9">
                                        <div class="form-check-horizontal">
                                            <label class="form-check form-check-inline">
                                                <input type="radio" asp-for="Gender" value="Kadın" class="form-check-input">
                                                <span class="form-check-label">Kadın</span>
                                            </label>
                                            <label class="form-check form-check-inline">
                                                <input type="radio" asp-for="Gender" value="Erkek" class="form-check-input">
                                                <span class="form-check-label">Erkek</span>
                                            </label>
                                        </div>
                                        <span asp-validation-for="Gender"></span>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <div class="row mb-3">
                                <label asp-for="Phone" class="col-lg-3 col-form-label"></label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control phone-mask" asp-for="Phone" />
                                    <span asp-validation-for="Phone"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Fax" class="col-lg-3 col-form-label"></label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control phone-mask" asp-for="Fax" />
                                    <span asp-validation-for="Fax"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="StreetAddress" class="col-lg-3 col-form-label"></label>
                                <div class="col-lg-9">
                                    <textarea type="text" class="form-control" asp-for="StreetAddress"></textarea>
                                    <span asp-validation-for="StreetAddress"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="ZipPostalCode" class="col-lg-3 col-form-label"></label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" asp-for="ZipPostalCode" />
                                    <span asp-validation-for="ZipPostalCode"></span>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="text-end">
                        <button type="submit" name="save" class="btn btn-primary">
                            Kaydet <i class="ph-paper-plane-tilt ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>