@model CashReportModel

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5>Günlük randevu raporu  </h5>
                <p>
                    @Model.DailyHeaderText
                </p>
            </div>
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead>
                        <tr>
                            <th width="20%">Randevu Durumu</th>
                            <th width="10%">Adet </th>
                            <th class="text-end">Fiyat </th>
                            <th>İndirimli Fiyat </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>Bekliyor:</strong></td>
                            <td><strong>@Model.DailyTotalAppointmentPendingCount</strong></td>
                            <td class="text-end"><strong>@Model.DailyAppointmentPendingTotalPrice </strong></td>
                            <td><strong>@Model.DailyAppointmentPendingTotalDiscountedPrice </strong></td>
                        </tr>
                        <tr class="text-indigo">
                            <td><strong>Onay Alındı:</strong></td>
                            <td><strong>@Model.DailyTotalAppointmentPatientConfirmedCount</strong></td>
                            <td class="text-end"><strong>@Model.DailyAppointmentPatientConfirmedTotalPrice </strong></td>
                            <td><strong>@Model.DailyAppointmentPatientConfirmedTotalDiscountedPrice </strong></td>
                        </tr>
                        <tr class="text-warning">
                            <td><strong>Ertelendi:</strong></td>
                            <td><strong>@Model.DailyTotalAppointmentPostponedCount</strong></td>
                            <td class="text-end"><strong>@Model.DailyAppointmentPostponedTotalPrice </strong></td>
                            <td><strong>@Model.DailyAppointmentPostponedTotalDiscountedPrice </strong></td>
                        </tr>
                        <tr class="text-danger">
                            <td><strong>İptal Oldu:</strong></td>
                            <td><strong>@Model.DailyTotalAppointmentCanceledCount</strong></td>
                            <td class="text-end"><strong>@Model.DailyAppointmentCanceledTotalPrice </strong></td>
                            <td><strong>@Model.DailyAppointmentCanceledTotalDiscountedPrice </strong></td>
                        </tr>
                        <tr class="text-success">
                            <td><strong>Tamamlandı:</strong></td>
                            <td><strong>@Model.DailyTotalAppointmentCompletedCount</strong></td>
                            <td class="text-end">
                                <strong>
                                    @Model.DailyAppointmentCompletedTotalPrice
                                    <br />
                                    <small>(Kredi Kartı)  @Model.DailyAppointmentCompletedCreditCardTotalPrice -</small>
                                    <small>(Nakit)  @Model.DailyAppointmentCompletedCashTotalPrice</small>
                                </strong>
                            </td>
                            <td>
                                <strong>
                                    @Model.DailyAppointmentCompletedTotalDiscountedPrice
