                                    <small>(Nakit)  @Model.DailyAppointmentCompletedCashTotalDiscountedPrice </small>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Toplamlar:</strong></td>
                            <td>
                                <strong>
                                    @(
                                        Model.DailyTotalAppointmentPendingCount +
                                        Model.DailyTotalAppointmentPatientConfirmedCount +
                                        Model.DailyTotalAppointmentPostponedCount +
                                        Model.DailyTotalAppointmentCanceledCount +
                                        Model.DailyTotalAppointmentCompletedCount
                                        )
                                </strong>
                            </td>
                            <td class="text-end">
                                <strong>
                                    @(
                                        Model.DailyAppointmentPendingTotalPrice +
                                        Model.DailyAppointmentPostponedTotalPrice +
                                        Model.DailyAppointmentPatientConfirmedTotalPrice +
                                        Model.DailyAppointmentCanceledTotalPrice +
                                        Model.DailyAppointmentCompletedTotalPrice
