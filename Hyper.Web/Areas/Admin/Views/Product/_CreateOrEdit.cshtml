@model ProductModel

@if (Model.Id > 0)
{
    <input type="hidden" asp-for="Id" />
}

<div class="row">
    <div class="col-lg-6">
        <fieldset>
            <legend class="fs-base fw-bold border-bottom pb-2 mb-3">
                Genel Bilgiler
            </legend>
            <div class="row mb-3">
                <label asp-for="ProductTypeId" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <select class="form-select" asp-items="Model.AvailableProductTypes" asp-for="ProductTypeId"></select>
                    <span asp-validation-for="ProductTypeId"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <textarea type="text" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-lg-6">
        <fieldset>
            <legend class="fs-base fw-bold border-bottom pb-2 mb-3">
                Fiyat Bilgileri
            </legend>
            <div class="row mb-3">
                <label asp-for="Price" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="OldPrice" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <input class="form-control" asp-for="OldPrice" />
                    <span asp-validation-for="OldPrice"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ProductCost" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <input class="form-control" asp-for="ProductCost" />
                    <span asp-validation-for="ProductCost"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TaxRate" class="col-lg-3 col-form-label"></label>
                <div class="col-lg-9">
                    <input class="form-control" asp-for="TaxRate" />
                    <span asp-validation-for="TaxRate"></span>
                </div>
            </div>
        </fieldset>
    </div>
</div>
